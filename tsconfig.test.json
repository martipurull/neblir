{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "strict": false,
    "types": ["vitest/globals", "node"],
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/app/api/*/route": ["test/types/routes.d.ts"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["test/**/*.ts", "test/types/**/*.d.ts", "vitest.config.ts"],
  "exclude": ["node_modules"]
}
